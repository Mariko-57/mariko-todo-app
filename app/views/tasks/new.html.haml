.container
  %h2 New Card
  - @task.errors.full_messages.each do |message|
    %ul
      %li 
        = message
  = form_with(model: @task, url: tasks_path, method: 'post', local: true) do |f|
    %div
      = f.label :eyecatch, 'アイキャッチ'
    %div 
      = f.file_field :eyecatch   
    .field.device-mgt
      = f.label :title, 'Name'
      %br/
      = f.text_field :title, class: 'text'
    .field.device-mgt
      = f.label :content, 'Description'
      %br/
      = f.text_area :content
    .actions
      = f.submit 'Submit', class: 'btn-primary'