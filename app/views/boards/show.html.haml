.container
  %h2.board_title= @board.title
  .board
    - @tasks.each do |task|
      = link_to board_task_path(@board,task) do
        %h3.task_title= task.title
        .board_content
          = task.content
        .board_heart
          = image_tag 'header-avator.png'
  = link_to new_board_task_path(@board), class: 'add-link' do
    + Add new card